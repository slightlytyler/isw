<%=content_for :head do %>
  <style type="text/css" media="screen">
    body{ background-image: url('<%= @posts.first.background_image %>'); }
  </style>
<% end %>

<div class="giffy-container">
  <% @posts.reverse.each do |post| %>
    <div>
      <%= image_tag post.image %>
    </div>
  <% end %>
</div>