<div class="block feed-entries">
  <% (@first_year..@current_year).reverse_each do |year| %>
    <h2><%= year %></h2>

    <ul>
      <% (@first_week..@current_week).reverse_each do |week| %>
        <% weeks_posts = get_weeks_posts(week, year) %>

        <a href="/week/<%= week %>/<%= year %>"><li>
          <% if weeks_posts.last.published_at.strftime('%B') == weeks_posts.first.published_at.strftime('%B') %>
            <h3><%= weeks_posts.last.published_at.strftime('%B') %></h3>
          <% else %>
            <h3><%= weeks_posts.last.published_at.strftime('%B') %> / <%= weeks_posts.first.published_at.strftime('%B') %></h3>
          <% end %>
          <h4><%= weeks_posts.last.published_at.strftime('%e') %> - <%= weeks_posts.first.published_at.strftime('%e') %></h4>
        </li></a>

      <% end %>
    </ul>

  <% end %>
</div>